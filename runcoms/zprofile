# # -*- coding: utf-8 -*-
# # vim: noai:et:tw=80:ts=2:ss=2:sts=2:sw=2:ft=zsh
# #
# # Executes commands at login pre-zshrc.
# #
# # Authors:
# #   Ricky Laney <rlaneyjr@gmail.com>
# #
# ########################################
# # ### zprofile
# # 
# # This file is similar to zlogin, but it is sourced before zshrc. It was added
# # for [KornShell][1] fans. See the description of zlogin below for what it may
  # # contain.
  # # 
  # # zprofile and zlogin are not meant to be used concurrently but can be done so.
# ########################################
# # The configuration files are read in the following order:
# # 
# #   01. /etc/zshenv
# #   02. ~/.zshenv
# #   03. /etc/zprofile
# #   04. ~/.zprofile
# #   05. /etc/zshrc
# #   06. ~/.zshrc
# #   07. ~/.zpreztorc
# #   08. /etc/zlogin
# #   09. ~/.zlogin
# #   10. ~/.zlogout
# #   11. /etc/zlogout
# ########################################
# Paths
# Ensure path arrays do not contain duplicates.
  typeset -gU cdpath fpath mailpath path manpath

# Set the list of directories that cd searches.
if [[ $OS == "mac" ]]; then
  cdpath=(
    $HD
    $HD/{bin,lib,scripts,temp,tmp}
    $HD/{cheaters,repos,DB}
    $HD/{Projects,Workshops,Documents,PycharmProjects}
    $HD/"Creative Cloud Files"
    $HD/"Dropbox (Personal)"
    $cdpath
  )
  # Set the list of directories that Zsh searches for programs.
  path=(
    $HD/.poetry/bin
    /usr/local/opt/coreutils/libexec/gnubin
    /usr/local/{bin,sbin}
    /Applications
    $HD/.go/bin
    $HD/.jenv/{bin,libexec}
    $HD/{bin,lib,scripts}
    /opt/X11/bin
    /opt/cisco/anyconnect/bin
    /opt/vagrant/bin
    $path
  )
  # load our own completions (~/.zsh/completion)
  fpath=(
    $HD/.zsh/completion
    /usr/local/share/zsh/functions
    /usr/local/share/zsh/site-functions
    /usr/local/share/zsh-completions
    $fpath
  )
elif [[ $OS == "lin" ]]; then
  cdpath=(
    $HD
    $HD/{bin,lib,scripts,temp,tmp}
    $HD/{Projects,Workshops,Documents}
    $cdpath
  )
  # Set the list of directories that Zsh searches for programs.
  path=(
    /bin
    /usr/bin
    /snap/bin
    /usr/local/{bin,sbin}
    /usr/share/virtualenvwrapper
    /usr/share/zsh/{function,help,vendor-completion}
    $HD/.local/bin
    $HD/.jenv/{bin,libexec}
    $HD/{bin,lib,scripts}
    $path
  )
  # load our own completions (~/.zsh/completion)
  fpath=(
    $HD/.zsh/completion
    /usr/share/zsh/{function,help,vendor-completion}
    $fpath
  )
fi

